@model List<TreinaWeb.Musicas.Web.ViewModels.Album.AlbumExibicaoViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
     <div class="col-md-10 col-sm-10 col-lg-10">
         <input type="text" id="pesquisaAlbum" class="form-control" />
     </div>
     <div class="col-md-2 col-lg-2 col-sm-2">
         <button id="btnPesquisarAlbum" class="btn btn-default">Pesquisar...</button>
     </div>
</div>

<table class="table" id="tblAlbuns">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nome")
            </th>
            <th>
                @Html.DisplayName("Ano")
            </th>
            <th>
                @Html.DisplayName("Observações")
            </th>
            <th>
                @Html.DisplayName("Email")
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ano)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observações)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.Partial("_Links", item)
                </td>
            </tr>
          }
    </tbody>
</table>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {


            $("#btnPesquisarAlbum").click(function () {
                var termoPesquisa = $("#pesquisaAlbum").val();
                $.ajax({
                    method: "GET",
                    url: "/Albuns/PesquisaPorNome?pesquisa=" + termoPesquisa,
                    success: function (data) {
                        $("#tblAlbuns tbody > tr").remove();
                        $.each(data, function (i, album) {
                            $("#tblAlbuns tbody").append(
                                "<tr>" +
                                "   <td>" + album.Nome + "</td>" +
                                "   <td>" + album.Ano + "</td>" +
                                "   <td>" + album.Observacoes + "</td>" +
                                "   <td>" + album.Email + "</td>" +
                                "   <td>" +
                                "<a href='/Albuns/Edit/" + album.Id + "'>Editar </a>" +
                                "<a href='/Albuns/Details/" + album.Id + "'>Detalhes </a>" +
                                "<a href='/Albuns/Delete/" + album.Id + "'>Deletar</a>" +
                                "   </td>" +
                                "</tr>"
                            );
                        });
                    },
                    error: function (data) {
                        alert("Houve um erro na pesquisa.")
                    }
                });
        
    });
});
    </script>
}
